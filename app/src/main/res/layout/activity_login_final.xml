<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.duoc.lavadovehiculo1.LoginFinalActivity"
    android:background="@drawable/lavado_autos_login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_margin="15dp"
            android:inputType="textEmailAddress"
            android:hint="Ingresa tu Email"
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/cajaTexto"
            />

        <EditText
            android:layout_margin="15dp"
            android:inputType="textPassword"
            android:hint="Ingresa tu ContraseÃ±a"
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/cajaTexto" />

        <Button
            android:layout_margin="15dp"
            android:id="@+id/btnLogin1"
            android:text="Ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="center"
            android:text="Aun no estas registrado? Ingresa aqui"
            android:id="@+id/lblRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark" />



    </LinearLayout>

    <TextView
        android:text="Login Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/textView20"
        android:textColor="@color/colorBlanco"
        android:textSize="50dp"
        android:textStyle="bold|italic" />


</RelativeLayout>
