<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ingreso_lavado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.duoc.lavadovehiculo1.IngresoLavadoActivity"
    android:background="@drawable/lavado_de_autos_9">


    <Button
        android:text="Ingresar Lavado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPresupuesto"
        android:layout_marginBottom="97dp"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ingreso Lavado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView2"
        android:textColor="@color/letrasLBL"
        android:textStyle="normal|bold"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true">


        <TextView
            android:text="Tipo Vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@color/letrasLBL" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/spnTipoVehiculo"
            android:entries="@array/TipoVeiculo"
            android:background="@color/cajaTexto" />

        <TextView
            android:text="Patente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/letrasLBL"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPatente"
            android:hint="Ingrese Patente"
            android:background="@color/cajaTexto"
            android:maxLength="6" />

        <TextView
            android:text="Precio Lavado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/letrasLBL"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtValorLavado"
            android:hint="Ingrese Valor Lavado"
            android:background="@color/cajaTexto"
            android:maxLength="5" />


    </LinearLayout>


</RelativeLayout>
